{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx", // 添加 JSX 支持
    "jsxImportSource": "react" // 指定 JSX 导入源
  },
  "include": ["server"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
